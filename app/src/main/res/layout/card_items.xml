<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:cardBackgroundColor="@android:color/white"
    android:layout_margin="2dp"
    app:cardElevation="4dp"
    app:cardCornerRadius="2dp">
    <RelativeLayout
        android:id="@+id/host_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="5dp">
        <TextView
            android:id="@+id/crypto_no"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black_tin"
            android:text="1"
            android:textSize="@dimen/select_size"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="5dp"/>
        <TextView
            android:id="@+id/crypto_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black_tin"
            android:textSize="@dimen/select_size"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/crypto_no"
            android:layout_marginBottom="10dp"
            tools:text="Crypto"/>

        <ImageView
            android:id="@+id/crypto_colour"
            android:layout_width="@dimen/arrow_size"
            android:layout_height="@dimen/arrow_size"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/crypto_name"
            android:layout_marginBottom="10dp"/>

        <TextView
            android:id="@+id/country_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black_tin"
            android:textSize="@dimen/select_size"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/crypto_colour"
            android:layout_marginBottom="5dp"
            android:maxLines="1"
            tools:text="Country"/>

        <TextView
            android:id="@+id/country_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black_tin"
            android:textSize="@dimen/select_size"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/country_name"
            android:layout_marginBottom="5dp"
            tools:text="499,000"/>

    </RelativeLayout>
</android.support.v7.widget.CardView>